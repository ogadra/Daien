{
	"sharedBrowserContext": true,
	"server": {
		"port": 8000
	},
	"browser": {
		"isolated": true,
		"launchOptions": {
			"headless": false,
			"args": [
				"--single-process",
				"--no-sandbox",
				"--disable-gpu",
				"--disable-dev-shm-usage",
				"--disable-setuid-sandbox",
				"--no-zygote"
			]
		}
	},
	"saveSession": false,
	"outputDir": "images/"
}
